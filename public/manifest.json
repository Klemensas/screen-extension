{
  "manifest_version": 2,
  "name": "Seenit extension",
  "description": "Seenit browser extension",
  "version": "0.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
      "default_icon": "icon16.png",
      "default_title": "Seenit extension",
      "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
      "scripts": ["js/eventPage.js"],
      "persistent": false
  },
  "permissions": [
    "webNavigation",
    "management",
    "storage",
    "tabs"
  ]
}
